page {
  font-size: 10pt;
  line-height: 150%;
  color: #666;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  background-color: white;
}

.container {
  box-sizing: border-box;

  height: 100%;
  width: 100%;
}

.pfont {
  font-size: 16px;
  color: black;
  font-weight: 500;
}
.padding_5px{
  padding: 5px;
}
.margin_5px{
  margin: 5px;
}
.padding_10px{
    padding: 10px;
}

.subfont {
  font-size: 12px;
  color: gray;
}

.box_screen {
  background-color: rgba(220, 220, 220, 0.6);
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 20;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wh_max {
  width: 100%;
  height: 100%;
}

.flex_row_around {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
