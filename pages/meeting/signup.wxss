.itemtitle {
  padding: 1% 3% 1% 3%;
  margin-top: 15px;
}

.ls {
  color: red;
  font-size: 14px;
}

.item input {
  background-color: white;
  width: 100%;
  box-sizing: border-box;
  border-top: 1px solid gainsboro;
  border-bottom: 1px solid gainsboro;
  height: 35px;
  padding: 0 5% 0 5%;
  color: black;
}
button{

  margin: 15px;
  color: white;
  background: -webkit-linear-gradient(left, rgba(255, 68, 0, 0.733), orange);

}

.button_s{
    background: -webkit-linear-gradient(right, rgba(255, 68, 0, 0.733), orange) !important;
}


.picker{
  background-color: white;
  width: 100%;
  box-sizing: border-box;
  border-top: 1px solid gainsboro;
  border-bottom: 1px solid gainsboro;
  height: 35px;
  padding-left: 15px;
  color: black;
  display: flex;
  align-items: center;
}

