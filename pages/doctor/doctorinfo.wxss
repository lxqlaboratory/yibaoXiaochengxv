/* pages/doctor/doctorinfo.wxss */

scroll-view {
  box-sizing: border-box;
}

.cont {
  box-sizing: border-box;
  padding-bottom: 25px;
  width: 100%;
  padding-top: 15px;
}

.infopart_1{
  background-color: white;
  border-top: 1px solid Silver;
  border-bottom: 1px solid Silver;
}
.infopart {
  margin-top: 15px;
  background-color: white;
  border-top: 1px solid Silver;
  border-bottom: 1px solid Silver;
}

.parttitle_s {
  background-color: whitesmoke;
}

.parttitle {
  width: 100%;
  box-sizing: border-box;
  padding: 8px 0 8px 0;
  color: black;
  font-size: 15px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.parttitle .left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.lefti {
  height: 24px;
  width: 8px;
  background-color: #66cdaa;
  margin-right: 10px;
}

.arrow_s {
  transform: rotate(90deg);
}

.arrow {
  height: 14px;
  width: 14px;
  position: relative;
  left: -15px;
  transition: 0.2s;
}

.infocontent {
  box-sizing: border-box;
  transition: max-height 0.3s;
  max-height: 0px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.lwpysss {
  background-color: whitesmoke;
  box-sizing: border-box;
  transition: max-height 0.3s ease;
  max-height: 0px;
  overflow: hidden;
}

.infocontent_s {
  max-height: 120vh;
}
.infocontent_n{
  max-height: 80vh;
}
.infocontent_t{
  max-height: 300vh;
}

.infoitem {
  box-sizing: border-box;
  width: 97%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 7px;
  border-top: 0.5px solid gainsboro;
}

.itemtitle {
  margin-left: 5px;
  color: DimGray;
  font-size: 14px;
}

.itemvalue {
  font-size: 14px;
  color: black;
  max-width: 60%;
  margin-right: 5px;
  word-break: break-all;
}

.lwvalue {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: black;
}

.lwpytitle {
  box-sizing: border-box;
  border-top: 1px solid gainsboro;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 7px;
  width: 97%;
}

.lwpyitem {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 2px 55px 2px 15px;
}

.jy {
  margin: 5px 15px 5px 15px;
  padding: 15px;
  background-color: ghostwhite;
  color: black;
  border-radius: 15px;
  border: 1px solid gray;
}
